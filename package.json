{
  "name": "update-npm-dependencies",
  "version": "0.1.0",
  "author": "jim@atomist.com",
  "description": "use this to pull in a skill's npm dependencies",
  "scripts": {
    "build:watch": "shadow-cljs watch dev",
    "build": "shadow-cljs release release",
    "bundle": "bundle",
    "skill": "npm run build && npm run bundle",
    "atm:lint:prettier": "prettier --write"
  },
  "dependencies": {
    "@atomist/api-cljs": "^0.4.111",
    "@atomist/skill-logging": "^0.2.6",
    "@google-cloud/pubsub": "^2.5.0",
    "@google-cloud/storage": "^5.3.0",
    "fast-glob": "^3.2.4",
    "iconv-lite": "^0.4.19",
    "js-yaml": "^3.13.1",
    "shell-quote": "^1.7.2",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@atomist/skill-bundler": "^0.1.26",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "shadow-cljs": "^2.11.5",
    "source-map-support": "0.5.9",
    "ws": "^7.3.1"
  },
  "main": "node_modules/@atomist/api-cljs/app.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.@(graphql|json|markdown|yaml|yml|md)": "npm run atm:lint:prettier"
  }
}
